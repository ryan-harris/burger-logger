<h1>Eat Some Burgers</h1>
<img class="center-image" src="/assets/img/burger.svg" width="200" height="auto">

<div class="burger-container">
  <div class="burger-list">
    <h2>Burgers to Eat</h2>
    {{#each burgers}}
    {{#unless devoured}}
    <div class="burger">
      <p>{{burger_name}}</p>
      <button class="eat-burger" data-id="{{id}}">Devour!</button>
    </div>
    {{/unless}}
    {{/each}}
  </div>

  <div class="burger-list">
    <h2>Devoured Burgers</h2>
    {{#each burgers}}
    {{#if devoured}}
    <div class="burger">
      <p>{{burger_name}}</p>
      <button class="delete-burger" data-id="{{id}}">Remove</button>
    </div>
    {{/if}}
    {{/each}}
  </div>
</div>

<div class="form-container">
  <h3>Add a Burger</h3>
  <form class="create-burger">
    <label for="name">Name:</label>
    <input type="text" id="name">
    <button>Submit</button>
  </form>
</div>